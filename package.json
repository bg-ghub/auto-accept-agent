{
    "name": "auto-accept-agent",
    "displayName": "Auto Accept Agent",
    "description": "Automatically accepts Antigravity agent steps. Simple, safe, and private - no tracking, no network calls.",
    "version": "1.3.1",
    "publisher": "bg-ghub",
    "icon": "media/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/bg-ghub/auto-accept-agent"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "antigravity",
        "ai",
        "auto-accept",
        "agent"
    ],
    "engines": {
        "vscode": "^1.60.0"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "auto-accept.toggle",
                "title": "Auto Accept: Toggle ON/OFF"
            },
            {
                "command": "auto-accept.editBannedCommands",
                "title": "Auto Accept: Edit Banned Commands"
            },
            {
                "command": "auto-accept.resetBannedCommands",
                "title": "Auto Accept: Reset Banned Commands"
            },
            {
                "command": "auto-accept.discoverCommands",
                "title": "Auto Accept: Discover Antigravity Commands"
            },
            {
                "command": "auto-accept.openQuickSettings",
                "title": "Auto Accept: Quick Settings"
            }
        ],
        "keybindings": [
            {
                "command": "auto-accept.toggle",
                "key": "ctrl+alt+shift+u",
                "mac": "cmd+alt+shift+u"
            },
            {
                "command": "auto-accept.openQuickSettings",
                "key": "ctrl+alt+shift+s",
                "mac": "cmd+alt+shift+s"
            }
        ],
        "configuration": {
            "title": "Auto Accept Agent",
            "properties": {
                "auto-accept.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable or disable auto-accept functionality"
                },
                "auto-accept.pollingInterval": {
                    "type": "number",
                    "default": 500,
                    "minimum": 100,
                    "maximum": 5000,
                    "description": "Polling interval in milliseconds (100-5000)"
                },
                "auto-accept.acceptAgentSteps": {
                    "type": "boolean",
                    "default": true,
                    "description": "Auto-accept agent steps (tool calls, file edits, etc.)"
                },
                "auto-accept.acceptTerminalCommands": {
                    "type": "boolean",
                    "default": true,
                    "description": "Auto-accept terminal/shell commands"
                },
                "auto-accept.acceptSuggestions": {
                    "type": "boolean",
                    "default": true,
                    "description": "Auto-accept inline code suggestions"
                },
                "auto-accept.acceptEditBlocks": {
                    "type": "boolean",
                    "default": true,
                    "description": "Auto-accept code edit blocks"
                },
                "auto-accept.acceptFileAccess": {
                    "type": "boolean",
                    "default": true,
                    "description": "Auto-accept file access permission dialogs (Allow This Conversation)"
                },
                "auto-accept.autoContinue": {
                    "type": "boolean",
                    "default": true,
                    "description": "Auto-send 'continue' when agent is waiting for user input"
                },
                "auto-accept.acceptAll": {
                    "type": "boolean",
                    "default": true,
                    "description": "Auto-accept all file changes at once (Accept All button)"
                },
                "auto-accept.autoRetryOnError": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically retry when agent execution terminates with error"
                },
                "auto-accept.autoRetryDelay": {
                    "type": "number",
                    "default": 1000,
                    "minimum": 500,
                    "maximum": 10000,
                    "description": "Delay before auto-retry in milliseconds"
                },
                "auto-accept.maxRetryAttempts": {
                    "type": "number",
                    "default": 3,
                    "minimum": 1,
                    "maximum": 10,
                    "description": "Maximum consecutive retry attempts before stopping"
                },
                "auto-accept.bannedCommands": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "rm -rf /",
                        "rm -rf ~",
                        "rm -rf *",
                        "format c:",
                        "del /f /s /q",
                        "rmdir /s /q",
                        ":(){:|:&};:",
                        "dd if=",
                        "mkfs.",
                        "> /dev/sda",
                        "chmod -R 777 /",
                        "sudo rm -rf",
                        "shutdown",
                        "reboot"
                    ],
                    "description": "List of dangerous command patterns to block (supports regex with /pattern/ syntax)"
                }
            }
        }
    }
}